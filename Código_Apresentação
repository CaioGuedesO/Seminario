#include <stdio.h>

void SelectionSort(int v[], int n){
int menor, swap;
for(int i = 0; i < (n - 1); i++){
    menor=i;
    for(int j = i + 1; j < n; j++){
        if(v[menor]>v[j])
        menor=j;
}

    if(menor != i){
        swap=v[i];
        v[i]=v[menor];
        v[menor]=swap;
    }
}


printf("Vetor ordenado pelo Selection Sort:");
for(i = 0; i < n; i++)
printf("%d ", v[i]);
}




int main(){
    int x;
    printf("Insira a quantidade de elementos: ");
    scanf("%d",&x);
    int vetor[x];
    for(int i = 0;i<x;i++){
        printf("Insira o elemento nÃºmero %d  ",i+1);
        scanf("%d",&vetor[i]);}
    for(int i = 0;i<x;i++){
        printf("%d ",vetor[i]);
    }
    SelSort(vetor,x);
}


